{
  // configs for vim extension
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-b>": false,
    "<C-f>": false,
  },
  "vim.visualModeKeyBindings": [
    {
      "before": [ ">" ],
      "commands": [ "editor.action.indentLines" ]
    },
    {
      "before": [ "<" ],
      "commands": [ "editor.action.outdentLines" ]
    },
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [ "d" ],
      "after": [ "\"", "_", "d" ]
    },
    {
      "before": [ "D" ],
      "after": [ "\"", "_", "D" ]
    },
    {
      "before": [ "c" ],
      "after": [ "\"", "_", "c" ]
    },
    {
      "before": [ "C" ],
      "after": [ "\"", "_", "C" ]
    },
    {
      "before": [ "<BS>" ],
      "after": [ "\"", "_", "X" ]
    },
    {
      "before": [ "<leader>", "f", "p" ],
      "commands": [ "workbench.action.findInFiles" ]
    },
    {
      "before": [ "<leader>", "f", "w" ],
      "commands": [ "actions.find" ]
    },
    {
      "before": [ "ctrl+d" ],
      "after": [ "ctrl+d", "z", "z" ]
    },
    {
      "before": [ "ctrl+u" ],
      "after": [ "ctrl+u", "z", "z" ]
    },
    {
        "before": ["H"],
        "after": ["^"]
    },
    {
        "before": ["L"],
        "after": ["$"]
    },
    {
        "before": ["m"],
        "after": ["%"]
    },
    {
      "before": ["/"],
      "commands": ["actions.find"]
    },
    {
      "before": ["n"],
      "commands": ["editor.action.nextMatchFindAction"],
    },
    {
      "before": ["shift+n"],
      "commands": ["editor.action.previousMatchFindAction"],
    },
    {
      "before": [ "<leader>", "/" ],
      "commands": [ "editor.action.commentLine" ]
    },
    {
      "before": ["?"],
      "commands": ["editor.action.startFindReplaceAction"]
    },
  ],
  "vim.normalModeKeyBindings": [
    { 
      "before": [ "<leader>", "w" ],
      "commands": [ "workbench.action.files.saveAll", ]
    },
    {
      "before": [ ">" ],
      "commands": [ "editor.action.indentLines" ]
    },
    {
      "before": [ "<" ],
      "commands": [ "editor.action.outdentLines" ]
    },
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [ "d" ],
      "after": [ "\"", "_", "d" ]
    },
    {
      "before": [ "D" ],
      "after": [ "\"", "_", "D" ]
    },
    {
      "before": [ "d", "d" ],
      "after": [ "\"", "_", "d", "d" ]
    },
    {
      "before": [ "c" ],
      "after": [ "\"", "_", "c" ]
    },
    {
      "before": [ "C" ],
      "after": [ "\"", "_", "C" ]
    },
    {
      "before": [ "c", "c" ],
      "after": [ "\"", "_", "c", "c" ]
    },
    {
      "before": [ "<BS>" ],
      "after": [ "\"", "_", "X" ]
    },
    {
      "before": [ "ctrl+d" ],
      "after": [ "ctrl+d", "z", "z" ]
    },
    {
      "before": [ "ctrl+u" ],
      "after": [ "ctrl+u", "z", "z" ]
    },
    {
      "before": [ "<leader>", "f", "w" ],
      "commands": [ "actions.find" ]
    },
    {
      "before": [ "<leader>", "f", "p" ],
      "commands": [ "workbench.action.findInFiles" ]
    },
    {
      "before": [ "<leader>", "f", "f" ],
      "commands": [ "workbench.action.quickOpen" ]
    },
    {
      "before": [ "]", "b" ],
      "commands": [ "workbench.action.nextEditor" ]
    },
    {
      "before": [ "[", "b" ],
      "commands": [ "workbench.action.previousEditor" ]
    },
    {
      "before": [ "<leader>", "v" ],
      "commands": [ "workbench.action.splitEditorRight" ]
    },
    {
      "before": [ "<leader>", "c" ],
      "commands": [ "workbench.action.closeActiveEditor" ]
    },
    {
      "before": [ "<leader>", "R" ],
      "commands": [ "editor.action.rename" ]
    },
    {
      "before": [ "<leader>", "e" ],
      "commands": [ "workbench.view.explorer" ]
    },
    {
      "before": [ "<leader>", "z", "c" ],
      "commands": [ "editor.fold" ]
    },
    {
      "before": [ "<leader>", "z", "o" ],
      "commands": [ "editor.unfold" ]
    },
    {
      "before": [ "j" ],
      "commands": [ "cursorDown" ]
    },
    {
      "before": [ "k" ],
      "commands": [ "cursorUp" ]
    },
    {
      "before": [ "<leader>", "f", "b" ],
      "commands": [ "workbench.action.showAllEditors" ]
    },
    {
      "before": [ "<leader>", "f", "d" ],
      "commands": [ "editor.action.formatDocument" ]
    },
    {
      "before": [ "<leader>", "g", "d" ],
      "commands": [ "workbench.view.scm" ]
    },
    {
      "before": [ "<leader>", "x", ],
      "commands": [ "workbench.view.extensions" ]
    },
    {
      "before": [ "<leader>", "s" ],
      "commands": [ "workbench.action.toggleSidebarVisibility" ]
    },
    {
        "before": ["H"],
        "after": ["^"]
    },
    {
        "before": ["L"],
        "after": ["$"]
    },
    {
        "before": ["<leader>", "o"],
        "commands": [
            {
              "command": "C_Cpp.SwitchHeaderSource",
              "when": "editorTextFocus && editorLangId == 'c' || editorTextFocus && editorLangId == 'cpp' || editorTextFocus && editorLangId == 'cuda-cpp'"
            }
        ]
    },
    {
        "before": ["<leader>", "m"],
        "after": ["m"]
    },
    {
        "before": ["<leader>", "m", "s"],
        "commands": [":marks"]
    },
    {
        "before": ["<leader>", "m", "d"],
        "commands": [":delmarks!"]
    },
    {
        "before": ["m"],
        "commands": ["editor.action.jumpToBracket"]
    },
    {
        "before": ["<leader>", "C"],
        "commands": ["workbench.action.closeOtherEditors"]
    },
    {
      "before": ["/"],
      "commands": ["actions.find"]
    },
    {
      "before": ["n"],
      "commands": ["editor.action.nextMatchFindAction"],
    },
    {
      "before": ["shift+n"],
      "commands": ["editor.action.previousMatchFindAction"],
    },
    {
      "before": ["?"],
      "commands": ["editor.action.startFindReplaceAction"]
    },
    {
      "before": [ "<leader>", "/" ],
      "commands": [ "editor.action.commentLine" ]
    },
    {
        "before": ["<leader>", "r", "n"],
        "commands": [
            {
                "command": "toggle",
                "args": {
                    "id": "line-numbers",
                    "value": [
                        {
                            "editor.lineNumbers": "relative"
                        },
                        {
                            "editor.lineNumbers": "on"
                        }
                    ]
                }
            }
        ]
    },
    {
      "before": [ "<leader>", "g", "p" ],
      "commands": [ "editor.action.dirtydiff.next" ]
    },
    {
      "before": [ "<leader>", "g", "r" ],
      "commands": [ "git.revertSelectedRanges" ]
    },
    {
      "before": [ "<leader>", "g", "n" ],
      "commands": [ "workbench.action.editor.nextChange" ]
    },
    {
      "before": [ "<leader>", "g", "N" ],
      "commands": [ "workbench.action.editor.previousChange" ]
    },
    {
        "before" : [ "<leader>", "g", "c", "p" ],
        "commands": [ "github.copilot.toggleCopilot" ]
    },
  ],
  "vim.operatorPendingModeKeyBindingsNonRecursive": [
    {
        "before": ["H"],
        "after": ["^"]
    },
    {
        "before": ["L"],
        "after": ["$"]
    },
    {
        "before": ["m"],
        "commands": ["editor.action.jumpToBracket"]
    },
  ],
  "vim.insertModeKeyBindings": [
      {
          "before": ["<C-h>"],
          "after": ["<left>"]
      },
      {
          "before": ["<C-l>"],
          "after": ["<right>"]
      }
  ],
  "vim.useSystemClipboard": true,
  "vim.highlightedyank.enable": true,
  "vim.showMarksInGutter": true,
  "vim.enableNeovim": true,
  "vim.neovimUseConfigFile": true,
  "vim.neovimConfigPath": "${env:NEOVIM_CONFIG}",
  "terminal.integrated.fontFamily": "monospace",
  "C_Cpp.configurationWarnings": "disabled",
  "workbench.iconTheme": "gruvbox-material-icon-theme",
  "terminal.integrated.commandsToSkipShell": [
      "workbench.action.focusSideBar",
  ],
  "code-runner.runInTerminal": true,
  "security.workspace.trust.untrustedFiles": "open",
  "cmake.configureOnOpen": true,
  "editor.bracketPairColorization.enabled": false,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "editor.inlineSuggest.enabled": true,
  "remote.SSH.defaultExtensions": [
    "gitpod.gitpod-remote-ssh"
  ],
  "redhat.telemetry.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "[python]": {
    "editor.formatOnType": true
  },
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.minimap.enabled": false,
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility":"compact",
  "workbench.editor.showTabs": "single",
  "window.density.editorTabHeight": "compact",
  "workbench.layoutControl.enabled": false,
  "workbench.activityBar.location": "hidden",
  "window.commandCenter": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "window.title": " ",
  "breadcrumbs.enabled": false,
  "workbench.colorCustomizations": {
    "[Default Dark Modern]": {
      "editorIndentGuide.background1": "#00000000",
      "editorIndentGuide.activeBackground1": "#4b4b4b",
      "editorLineNumber.foreground": "#474747",
    },
  },
  "editor.tokenColorCustomizations": {
      "[Default Dark Modern]": {
          "comments": "#ffffff4d",
          "textMateRules": [
              {
                  "scope": [
                      "variable.parameter"
                  ],
                  "settings": {
                      "foreground": "#ffc5fc"
                  }
              }
          ]
      }
  },
  "editor.fontFamily": "Fira Code",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.fontWeight": 450, 
  "editor.wordWrap": "on",
  "workbench.list.defaultFindMatchType": "fuzzy",
  "workbench.list.defaultFindMode": "filter",
}
